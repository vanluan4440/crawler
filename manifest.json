{
  "manifest_version": 3,
  "name": "Web Crawler DevTools",
  "version": "1.0.0",
  "description": "Advanced web crawler extension for extracting and analyzing web page data",
  "devtools_page": "devtools/devtools.html",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "sidePanel",
    "debugger"
  ],
  "host_permissions": [
    "<all_urls>",
    "*://*.facebook.com/*"
  ],
  "action": {
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

